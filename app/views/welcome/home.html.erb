<div class="d-flex flex-row justify-content-around landing-page align-items-center">
	<div>
		<h1>Where to?<small><br> Start your next adventure on <br>Airbnb.</small></h1>
	</div>
	<div class="form-box col-md-4">
		
		<%= form_tag(listings_path, method: :get, class: "d-flex flex-column" ) do %>
			<div class="d-flex justify-content-center">
				<h2>Search For A Place</h2>
			</div>
			<div class="d-flex justify-content-around">
				<%= text_field_tag :location, params[:location], placeholder: "Search Location", class: "form-input" %>
				<%= number_field_tag :pax, params[:pax], placeholder: "No. of People", class: "form-input" %>
			</div>
			<div class="d-flex justify-content-around">
				<%= date_field_tag :start_date, params[:start_date], placeholder: "Start Date", class: "form-input" %>
				<%= date_field_tag :end_date, params[:end_date], placeholder: "End Date", class: "form-input" %>
			</div>
			<%#= select_tag :pax, [1,2,3,4,5] , {} ,{class: "form-control"} %>
			<div class="d-flex justify-content-center">
				<%= button_tag "Search", :name => nil, class: "submit-button" %>
			</div>
		<% end %>
	</form>
</div>